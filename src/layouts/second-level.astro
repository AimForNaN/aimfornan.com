---
import Footer from '../components/footer.astro';
import Head from '../components/head.astro';
import Header from '../components/header.astro';
import Nav from '../components/nav.astro';
import PrimaryHeading from '../components/primary-heading.astro';

import '../styles/second-level.css';

if ('frontmatter' in Astro.props) {
	var {
		frontmatter,
	} = Astro.props;
} else {
	var frontmatter = Astro.props;
}

const {
	title,
} = frontmatter;
---

<!doctype html>
<html lang="en">
	<Head title={title} />
	<body class="divide-base-300 divide-y flex flex-col min-h-screen">
		<Nav />
		<main class="second-level flex-1">
			<article class="flex flex-col gap-8 max-w-4xl mx-auto p-8 py-24 lg:py-28">
				<PrimaryHeading>{title}</PrimaryHeading>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
