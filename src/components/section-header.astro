---
import SecondaryHeading from './secondary-heading.astro';

const {props} = Astro;
---

<header>
	<hgroup class="flex flex-col gap-1">
		{props.heading && <SecondaryHeading>{props.heading}</SecondaryHeading>}
		{props.subheading && <p class="text-2xl text-zinc-500 dark:text-zinc-400">{props.subheading}</p>}
	</hgroup>
</header>
